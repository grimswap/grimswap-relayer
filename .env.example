# GrimSwap Relayer Configuration
# Copy this to .env and fill in the values

# Relayer private key (this wallet pays gas for users)
# IMPORTANT: Fund this wallet with ETH on Unichain Sepolia
RELAYER_PRIVATE_KEY=0x...

# RPC URL
RPC_URL=https://sepolia.unichain.org

# Server port
PORT=3001

# Environment
NODE_ENV=development

# Contract addresses (Unichain Sepolia)
POOL_MANAGER_ADDRESS=0x00B036B58a818B1BC34d502D3fE730Db729e62AC
GRIM_POOL_ADDRESS=0xad079eAC28499c4eeA5C02D2DE1C81E56b9AA090
GRIM_SWAP_ZK_ADDRESS=0x95ED348fCC232FB040e46c77C60308517e4BC0C4
VERIFIER_ADDRESS=0xF7D14b744935cE34a210D7513471a8E6d6e696a0

# Relayer fee in basis points (10 = 0.1%)
RELAYER_FEE_BPS=10

# Minimum ETH balance to maintain (in wei)
MIN_BALANCE_WEI=100000000000000000

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
